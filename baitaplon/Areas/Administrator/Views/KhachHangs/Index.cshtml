@model IEnumerable<vinmart.KhachHang>

@{
    ViewBag.Title = "Khach Hang";
}

<h2 style="color:blue;font-style:oblique">Danh sach khach hang</h2>

<p>
    <i class="fa fa-newspaper-o"></i>
    @Html.ActionLink("Tao moi", "Create")
</p>
<table class="table" border="1">
    <tr style="color:red;font-size:15px;font-style:oblique">
        <th>
            @Html.DisplayNameFor(model => model.MaKH)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Ten)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DiaChi)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DienThoai)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DiemThuong)
        </th>
