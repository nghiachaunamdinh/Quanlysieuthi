    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.MaKH)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Ten)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.DiaChi)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.DienThoai)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.DiemThuong)
    </td>
    <td>
        <i class="fa fa-edit" style="color:blue;"></i>
        @Html.ActionLink("Thay doi", "Edit", new { id = item.MaKH }) |
        <i class="fa fa-deaf" style="color:blue;"></i>
        @Html.ActionLink("Chi tiet", "Details", new { id = item.MaKH }) |
        <i class="fa fa-remove" style="color:blue;"></i>
        @Html.ActionLink("Xoa", "Delete", new { id = item.MaKH })
    </td>
</tr>
